@{
    ViewData["Title"] = "Form";
}

<div class="text-center">
    <h1 class="display-4">Enter a Movie into the Collection</h1>
    <form method="post" action="/Movies/Add">
        <label for="title">Title:</label><br>
        <input type="text" id="title" name="Title" required><br>

        <label for="year">Year:</label><br>
        <input type="number" id="year" name="Year" required><br>

        <label for="director">Director:</label><br>
        <input type="text" id="director" name="Director" required><br>

        <label for="genre">Genre:</label><br>
        <input type="text" id="genre" name="Genre" required><br>

        <label for="rating">Rating:</label><br>
        <select id="rating" name="Rating" required>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select><br>

        <label for="edited">Edited:</label><br>
        <select id="edited" name="Edited" required>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select><br>

        <label for="lentTo">Lent To:</label><br>
        <input type="text" id="lentTo" name="LentTo"><br>

        <label for="notes">Notes (max 25 characters):</label><br>
        <input type="text" id="notes" name="Notes" maxlength="25"><br>
        <br />
        <input type="submit" value="Submit">
    </form>
</div>
